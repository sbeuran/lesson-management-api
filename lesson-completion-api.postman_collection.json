{
  "info": {
    "name": "Lesson Completion API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Api-Key",
            "value": "{{apiKey}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Completion",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "X-Api-Key",
            "value": "{{apiKey}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"student_id\": \"test123\",\n    \"lesson_id\": \"lesson456\",\n    \"completion_date\": \"2024-01-10T18:30:00\",\n    \"score\": \"95.5\",\n    \"duration_minutes\": 45,\n    \"status\": \"completed\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/lessons/completion",
          "host": ["{{baseUrl}}"],
          "path": ["lessons", "completion"]
        }
      }
    },
    {
      "name": "Get Student Completions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Api-Key",
            "value": "{{apiKey}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/lessons/completion/test123",
          "host": ["{{baseUrl}}"],
          "path": ["lessons", "completion", "test123"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://7k5ak0ymf6.execute-api.eu-west-1.amazonaws.com/prod"
    },
    {
      "key": "studentId",
      "value": "student001"
    },
    {
      "key": "apiKey",
      "value": ""
    }
  ]
} 