{
  "info": {
    "name": "Lesson Completion API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Lesson Completion",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-api-key",
            "value": "{{apiKey}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/lessons/completion",
          "host": ["{{baseUrl}}"],
          "path": ["lessons", "completion"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"student_id\": \"student001\",\n    \"lesson_id\": \"lesson001\",\n    \"completion_date\": \"2024-01-10T12:00:00\",\n    \"score\": 95.5,\n    \"duration_minutes\": 45,\n    \"status\": \"completed\"\n}"
        }
      }
    },
    {
      "name": "Get Student Completions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/lessons/completion/{{studentId}}",
          "host": ["{{baseUrl}}"],
          "path": ["lessons", "completion", "{{studentId}}"]
        }
      }
    },
    {
      "name": "List All Completions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/lessons/completion",
          "host": ["{{baseUrl}}"],
          "path": ["lessons", "completion"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://7k5ak0ymf6.execute-api.eu-west-1.amazonaws.com/prod"
    },
    {
      "key": "studentId",
      "value": "student001"
    },
    {
      "key": "apiKey",
      "value": ""
    }
  ]
} 